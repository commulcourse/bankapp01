<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.myapp.model.account.AccountRepository">

    <select id="findByIdWithUser" resultType="shop.mtcoding.myapp.dto.account.AccountDetailRespDto">
        select at.id, at.number, at.balance, at.user_id, (select fullname from user_tb ut where ut.id = at.user_id) fullname 
        from account_tb at
        where at.id = #{id}
    </select>


    <select id="findByNumber" resultType="shop.mtcoding.myapp.model.account.Account">
        SELECT * FROM ACCOUNT_TB WHERE number = #{number}
    </select>

    <select id="findByUserId" resultType="shop.mtcoding.myapp.model.account.Account">
        SELECT * FROM ACCOUNT_TB WHERE user_id = #{principalId}
    </select> 
 
    <select id="findAll" resultType="shop.mtcoding.myapp.model.account.Account">
        select * from account_tb
    </select>

    <select id="findById" resultType="shop.mtcoding.myapp.model.account.Account">
        select * from account_tb where id = #{id}
    </select>   

    <insert id="insert">
        insert into account_tb (username, password, balance, user_id, created_at)
        values(#{username}, #{password}, #{balance}, #{userId}, now())
    </insert>    

    <delete id="deleteById" >
        delete from account_tb where id = #{id} 
    </delete>    

    <update id="updateById" >
        update user_tb set username= #{username}, password= #{password}, balance= #{balance}, user_id= #{userId} where id = #{id} 
    </update>    
</mapper>